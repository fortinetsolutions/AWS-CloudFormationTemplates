				"FGT1Info": {
					"Fn::Join": [
						"", ["{",
							"'VPCCIDR':'",
							{
								"Ref": "VPCCIDR"
							},
							"',",
							"'Region':'",
							{
								"Ref": "AWS::Region"
							},
							"',",
							"'HealthCheckAPI':'",
							{
								"Ref": "HealthCheckAPI"
							},
							"',",
